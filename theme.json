{
	"version": 2,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"color": {
			"palette": [
				{
					"slug": "primary",
					"color": "#2563EB",
					"name": "Primary Blue"
				},
				{
					"slug": "secondary",
					"color": "#1E293B",
					"name": "Dark Navy"
				},
				{
					"slug": "accent",
					"color": "#F59E0B",
					"name": "Orange Accent"
				},
				{
					"slug": "background",
					"color": "#F8FAFC",
					"name": "Light Gray Background"
				},
				{
					"slug": "white",
					"color": "#FFFFFF",
					"name": "White"
				},
				{
					"slug": "text-primary",
					"color": "#1F2937",
					"name": "Dark Gray Text"
				},
				{
					"slug": "text-secondary",
					"color": "#6B7280",
					"name": "Medium Gray Text"
				}
			]
		},
		"layout": {
			"contentSize": "800px",
			"wideSize": "1200px"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "Inter",
					"slug": "inter",
					"fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif"
				},
				{
					"name": "System Font",
					"slug": "system",
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif"
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"size": "14px",
					"name": "Small"
				},
				{
					"slug": "medium",
					"size": "16px",
					"name": "Medium"
				},
				{
					"slug": "large",
					"size": "18px",
					"name": "Large"
				},
				{
					"slug": "x-large",
					"size": "24px",
					"name": "Extra Large"
				},
				{
					"slug": "xx-large",
					"size": "32px",
					"name": "2X Large"
				},
				{
					"slug": "xxx-large",
					"size": "48px",
					"name": "3X Large"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--inter)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.6"
		},
		"color": {
			"background": "var(--wp--preset--color--white)",
			"text": "var(--wp--preset--color--text-primary)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--secondary)"
					}
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xxx-large)",
					"fontWeight": "700",
					"lineHeight": "1.2"
				},
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"fontWeight": "700",
					"lineHeight": "1.3"
				},
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "600",
					"lineHeight": "1.4"
				},
				"color": {
					"text": "var(--wp--preset--color--text-primary)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "20px",
					"fontWeight": "600",
					"lineHeight": "1.4"
				},
				"color": {
					"text": "var(--wp--preset--color--text-primary)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "18px",
					"fontWeight": "600",
					"lineHeight": "1.5"
				},
				"color": {
					"text": "var(--wp--preset--color--text-primary)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "16px",
					"fontWeight": "600",
					"lineHeight": "1.5"
				},
				"color": {
					"text": "var(--wp--preset--color--text-secondary)"
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--white)"
				},
				"border": {
					"radius": "8px"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "600"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)"
					}
				}
			}
		},
		"blocks": {
			"core/paragraph": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "1.8"
				},
				"spacing": {
					"margin": {
						"bottom": "1.5rem"
					}
				}
			},
			"core/list": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "1.8"
				},
				"spacing": {
					"margin": {
						"bottom": "1.5rem"
					}
				}
			},
			"core/quote": {
				"color": {
					"text": "var(--wp--preset--color--text-primary)",
					"background": "var(--wp--preset--color--background)"
				},
				"border": {
					"left": {
						"width": "4px",
						"color": "var(--wp--preset--color--primary)"
					}
				},
				"spacing": {
					"padding": {
						"left": "1.5rem",
						"top": "1rem",
						"bottom": "1rem"
					},
					"margin": {
						"bottom": "2rem"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontStyle": "italic",
					"lineHeight": "1.7"
				}
			},
			"core/pullquote": {
				"color": {
					"text": "var(--wp--preset--color--secondary)",
					"background": "var(--wp--preset--color--background)"
				},
				"border": {
					"top": {
						"width": "2px",
						"color": "var(--wp--preset--color--accent)"
					},
					"bottom": {
						"width": "2px",
						"color": "var(--wp--preset--color--accent)"
					}
				},
				"spacing": {
					"padding": {
						"top": "2rem",
						"bottom": "2rem",
						"left": "1rem",
						"right": "1rem"
					},
					"margin": {
						"bottom": "2rem"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "600",
					"lineHeight": "1.5"
				}
			},
			"core/code": {
				"color": {
					"text": "#E5E7EB",
					"background": "#1F2937"
				},
				"border": {
					"radius": "6px"
				},
				"spacing": {
					"padding": {
						"top": "1rem",
						"bottom": "1rem",
						"left": "1rem",
						"right": "1rem"
					}
				},
				"typography": {
					"fontFamily": "monospace",
					"fontSize": "14px"
				}
			},
			"core/preformatted": {
				"color": {
					"text": "#E5E7EB",
					"background": "#1F2937"
				},
				"border": {
					"radius": "6px"
				},
				"spacing": {
					"padding": {
						"top": "1rem",
						"bottom": "1rem",
						"left": "1rem",
						"right": "1rem"
					}
				},
				"typography": {
					"fontFamily": "monospace",
					"fontSize": "14px"
				}
			},
			"core/verse": {
				"color": {
					"text": "var(--wp--preset--color--text-primary)",
					"background": "var(--wp--preset--color--background)"
				},
				"border": {
					"left": {
						"width": "2px",
						"color": "var(--wp--preset--color--accent)"
					}
				},
				"spacing": {
					"padding": {
						"left": "1.5rem",
						"top": "1rem",
						"bottom": "1rem"
					}
				},
				"typography": {
					"fontFamily": "Georgia, serif",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontStyle": "italic",
					"lineHeight": "1.8"
				}
			},
			"core/details": {
				"color": {
					"background": "var(--wp--preset--color--background)"
				},
				"border": {
					"radius": "8px"
				},
				"spacing": {
					"padding": {
						"top": "1rem",
						"bottom": "1rem",
						"left": "1rem",
						"right": "1rem"
					},
					"margin": {
						"bottom": "1.5rem"
					}
				}
			}
		}
	}
}